@page
@model IndexPageModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row text-center">
        @foreach (var appUser in Model.AppUsers)
        {
            var workingStyle = appUser.WorkingStatus == Models.WorkingStatus.Working ? "bg-success" : "bg-danger";
            <div class="col">
                <a class="text-decoration-none" asp-page="./PassCode" asp-route-id="@appUser.AppUserId">
                    <div class="card text-white @(workingStyle) mb-3" style="max-width: 9rem;">
                        <div class="card-body">
                            <h5 class="card-title">@appUser.FirstName</h5>
                            <h5 class="card-title">@appUser.LastName</h5>
                        </div>
                        <div class="card-footer text-dark bg-white">
                            @appUser.WorkingStatus
                        </div>            
                    </div>
                </a>
            </div>
        }
    </div>
</div>
